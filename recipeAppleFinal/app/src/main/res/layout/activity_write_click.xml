<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:background="@drawable/background">
    <LinearLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:background="@drawable/board1"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="제목"
                    android:layout_height="match_parent"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:hint = "제목을 입력하세요."
                    android:gravity="center"
                    android:id="@+id/write_title"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:layout_margin="5dp"
                android:background="@drawable/board1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="TIP."
                    android:layout_height="match_parent"
                    android:gravity="center"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="match_parent"
                    android:hint = "TIP을 입력하세요."
                    android:id="@+id/write_tip"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:layout_margin="5dp"
                android:background="@drawable/board1">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint = "재료를 입력하세요."
                    android:id="@+id/write_ingre"
                    android:gravity="center"

                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/write_addphoto"
                android:layout_gravity="right"
                android:text="사진추가"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/write_click_listview">

            </ListView>

            <Button
                android:id="@+id/write_finish"
                android:layout_gravity="right"
                android:text="올리기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>